<h2>Recruit {{displayName}}</h2>

{{#if alert}}
  <div class="alert alert-{{alert.type}}">
    {{alert.message}}
  </div>
{{/if}}

<form name="#" id="recruiter" class="mb-5" method="POST">
  <div class="d-flex gap-2 justify-content-center">
    <button class="btn btn-primary btn-lg g-recaptcha" id="recruitSubmit" 
        data-sitekey="6LcGYngiAAAAAIz3MKL2tnZUitCDljBkTKxLz5du" 
        data-callback='onSubmit' 
        data-action='submit'>Recruit Player</button>
  </div>
</form>
<script src="https://www.google.com/recaptcha/api.js"></script>
<script>
   function onSubmit(token) {
     document.getElementById("recruiter").submit();
   }
 </script>
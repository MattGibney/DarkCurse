  {{> main/navigation}}

  <div class="container-fluid">
    <div class="row">
      <div class="col-2">

        {{> main/statsSidebar sidebarData=sidebarData}}

      </div>
      <div class="col-10">
        {{{body}}}
      </div>
    </div>
  </div>

<script>
    //Credit: https://codepen.io/luci/pen/EEavVR
    //Author: Unknown
    startTimer();

    function startTimer() {
      var presentTime = document.getElementById('nextTurnTimestamp').innerHTML;
      var timeArray = presentTime.split(/[:]+/);
      var m = timeArray[0];
      var s = checkSecond((timeArray[1] - 1));
      if(s==59){m=m-1}
      if((m + '').length == 1){
        m = '0' + m;
      }
      if(m < 0){
        m = '29';
      }
      document.getElementById('nextTurnTimestamp').innerHTML = m + ":" + s;
      setTimeout(startTimer, 1000);
    }

    function checkSecond(sec) {
      if (sec < 10 && sec >= 0) {sec = "0" + sec}; // add zero in front of numbers < 10
      if (sec < 0) {sec = "59"};
      return sec;
    }
    // END
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-toaster@4.0.1/js/bootstrap-toaster.min.js"></script>
</body>
</html>
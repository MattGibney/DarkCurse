<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <style>
    :root { font-size: 14px; }
  </style>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  
  <!-- Bootstrap Toaster CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-toaster@4.0.1/css/bootstrap-toaster.min.css" />

  <title>Dark Curse | {{pageTitle}}</title>
  <!-- JQuery -->
  <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
  <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
  <!-- Menu CSS -->
  <link href="/css/{{userDataFiltered.race}}.css" rel="stylesheet" />
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center heading">
    <h1 class="my-5 pb-0">Dark Curse</h1>
  </div>

  {{> main/navigation}}
  
  <div class="container">
      <div class="row">
        <div class="col-sm-3 sidebar">
          {{> main/statsSidebar sidebarData=sidebarData}}
        </div>
        <div class="col-sm-9 mainArea">
          {{{body}}}
        </div>
      </div>
  </div>

<script>
    //Credit: https://codepen.io/luci/pen/EEavVR
    //Author: Unknown
    startTimer();

    function startTimer() {
      var presentTime = document.getElementById('nextTurnTimestamp').innerHTML;
      var timeArray = presentTime.split(/[:]+/);
      var m = timeArray[0];
      var s = checkSecond((timeArray[1] - 1));
      if(s==59){m=m-1}
      if((m + '').length == 1){
        m = '0' + m;
      }
      if(m < 0){
        m = '29';
      }
      document.getElementById('nextTurnTimestamp').innerHTML = m + ":" + s;
      setTimeout(startTimer, 1000);
    }

    function checkSecond(sec) {
      if (sec < 10 && sec >= 0) {sec = "0" + sec}; // add zero in front of numbers < 10
      if (sec < 0) {sec = "59"};
      return sec;
    }
    // END
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-toaster@4.0.1/js/bootstrap-toaster.min.js"></script>
  <script>
  // TODO: I am not happy with using jQuery for this
  document.addEventListener("DOMContentLoaded", function(event) {
    const allElems = document.querySelectorAll('ul.nav > li')
    for(let i =0; i < allElems.length -1; i++){
      allElems[i].onmouseover = allElems[i].onmouseleave = handler 
    }
    document.querySelector('.menu-container').onmouseleave = function(){hideAllandReset()};
    function hideAllandReset(link="reset"){
      document.querySelector('.nav > li > ul').style.display = "none";;
      if(link == 'reset')
        document.querySelector('.current > ul').style.display = "block";
      else
        document.querySelector('.nav > li > ul#' + link + '-second').style.display = "block";
    }
    function handler(event) {
      console.log(event);
      if (event.type == 'mouseover') {
        console.log('mouseover');
        hideAllandReset(this.children[0].id);
      }
      if (event.type == 'mouseout') {
        hideAllandReset()
      }
    }
  })</script> 
</body>
</html>
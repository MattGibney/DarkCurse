  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-toaster@4.0.1/css/bootstrap-toaster.min.css" />

  <title>Dark Curse | {{pageTitle}}</title>
  <!-- JQuery -->
  <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
  <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
  <!-- Menu CSS -->
  <style>
    .nav ul {list-style-type:none; margin:0; padding:0;} 
    .nav li { float: left; margin: 0 5px; } 
    .nav a {
      display:block;
      text-decoration:none;
    }
    .nav a:active, .nav a:focus, .nav a:hover {
      
    }
    .nav li.current {
      
    }
    .nav li.current ul {
      left: 50%;
      transform: translate(-50%, 0);
    }
    .nav ul {
      position:absolute;
      left:-999em;
      list-style:none;
      padding:.9em 0 0;
    }
    .nav ul li {
      width:auto;
      margin:0 15px 0 0;
    }
    .nav ul a {
      height:auto;
      padding:0 8px;
    }
    .nav li:active ul, .nav li:hover ul { 
      left: 50%;
      transform: translate(-50%, 0);
      background:#fff;
    }
  </style>
</head>
<body>

  <div class="container d-flex justify-content-center align-items-center">
    <h1 class="my-4 pb-0">Dark Curse</h1>
  </div>

  {{> main/navigation}}
  <main>
    <section>
      <div class="container">
        <div class="content">
          <div class="row">
            <div class="col-lg-2">
              {{> main/statsSidebar sidebarData=sidebarData}}
            </div>
            <div class="col-lg-10">
              {{{body}}}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

<script>
    //Credit: https://codepen.io/luci/pen/EEavVR
    //Author: Unknown
    startTimer();

    function startTimer() {
      var presentTime = document.getElementById('nextTurnTimestamp').innerHTML;
      var timeArray = presentTime.split(/[:]+/);
      var m = timeArray[0];
      var s = checkSecond((timeArray[1] - 1));
      if(s==59){m=m-1}
      if((m + '').length == 1){
        m = '0' + m;
      }
      if(m < 0){
        m = '29';
      }
      document.getElementById('nextTurnTimestamp').innerHTML = m + ":" + s;
      setTimeout(startTimer, 1000);
    }

    function checkSecond(sec) {
      if (sec < 10 && sec >= 0) {sec = "0" + sec}; // add zero in front of numbers < 10
      if (sec < 0) {sec = "59"};
      return sec;
    }
    // END
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-toaster@4.0.1/js/bootstrap-toaster.min.js"></script>
</body>
</html>